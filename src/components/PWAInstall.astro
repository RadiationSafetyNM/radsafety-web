<script>
    document.addEventListener("DOMContentLoaded", () => {
        const pwaPrompt = document.getElementById("pwa-install-prompt");
        const installBtn = document.getElementById(
            "pwa-install-btn",
        ) as HTMLButtonElement;
        const closeBtn = document.getElementById("pwa-close-btn");
        const iosGuide = document.getElementById("ios-instruction");
        const pwaTitle = document.getElementById("pwa-title");
        const pwaDesc = document.getElementById("pwa-desc");

        let deferredPrompt: any;

        // 1. Check if already installed (standalone mode)
        const isStandalone =
            window.matchMedia("(display-mode: standalone)").matches ||
            (window.navigator as any).standalone === true ||
            document.referrer.includes("android-app://");

        if (isStandalone) {
            // If standalone, ensure we never show it and clear any dismissed state if needed (optional)
            // But mainly just return to exit.
            return;
        }

        // 2. Check if user recently dismissed
        const lastDismissed = localStorage.getItem("pwa_dismissed");
        if (
            lastDismissed &&
            Date.now() - parseInt(lastDismissed) < 1000 * 60 * 60 * 24 * 7
        ) {
            // Dismissed within last 7 days
            return;
        }

        // 3. Detect Device
        const isIOS =
            /iPad|iPhone|iPod/.test(navigator.userAgent) &&
            !(window as any).MSStream;
        const isAndroid = /Android/.test(navigator.userAgent);

        // Show prompt for mobile only
        if (isIOS || isAndroid) {
            // Handle Android/Chrome default prompt
            window.addEventListener("beforeinstallprompt", (e) => {
                e.preventDefault();
                deferredPrompt = e;
                if (pwaPrompt) pwaPrompt.style.display = "block";
            });

            // Handle iOS (Since beforeinstallprompt doesn't fire)
            if (isIOS && pwaPrompt) {
                pwaPrompt.style.display = "block";
                if (pwaTitle) pwaTitle.textContent = "í™ˆ í™”ë©´ì— ì¶”ê°€í•˜ê¸°";
                if (pwaDesc)
                    pwaDesc.textContent =
                        "ì•±ì²˜ëŸ¼ í¸ë¦¬í•˜ê²Œ ì´ìš©í•˜ì‹¤ ìˆ˜ ìˆìŠµë‹ˆë‹¤.";
                if (installBtn) installBtn.textContent = "ë°©ë²• í™•ì¸";
            }
        }

        installBtn?.addEventListener("click", async () => {
            if (isIOS) {
                // Toggle iOS instructions
                if (iosGuide)
                    iosGuide.style.display =
                        iosGuide.style.display === "none" ? "block" : "none";
                if (installBtn)
                    installBtn.textContent =
                        iosGuide?.style.display === "block"
                            ? "ìˆ¨ê¸°ê¸°"
                            : "ë°©ë²• í™•ì¸";
            } else if (deferredPrompt) {
                // Trigger Android Install
                deferredPrompt.prompt();
                const { outcome } = await deferredPrompt.userChoice;
                console.log(`User response: ${outcome}`);
                if (outcome === "accepted") {
                    if (pwaPrompt) pwaPrompt.style.display = "none";
                }
                deferredPrompt = null;
            }
        });

        closeBtn?.addEventListener("click", () => {
            if (pwaPrompt) pwaPrompt.style.display = "none";
            localStorage.setItem("pwa_dismissed", Date.now().toString());
        });
    });
</script>
