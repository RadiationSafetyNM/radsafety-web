            color: var(--text-muted);
            transition: transform 0.3s ease;
            font-size: 0.9em;
        }
        .category-accordion.open .category-header .icon {
            transform: rotate(180deg);
        }
        .category-accordion.open .category-header {
            background-color: var(--bg-sidebar); /* Darker for open header */
            border-bottom: 1px solid var(--border-color);
        }

        /* Content container */
        .findings-list {
            display: none;
            padding: 1.5rem;
            background: var(--bg-body); /* Slightly distinct from card */
        }
        .category-accordion.open .findings-list {
            display: block;
            animation: slideDown 0.2s ease-out;
        }

        /* Finding Card (Inside Accordion) */
        .finding-card {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-card);
            margin-bottom: 0.75rem;
            overflow: hidden;
        }
        .finding-card:last-child {
            margin-bottom: 0;
        }

        .finding-header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem; /* Compact padding */
            background: none;
            border: none;
            cursor: pointer;
            text-align: left;
            font-family: inherit;
            background-color: var(--bg-card);
            transition: background-color 0.2s;
        }
        .finding-card.accordion .finding-header:hover {
            background-color: #27272a;
        }

        .finding-title {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text-main);
        }
        .finding-header .icon {
            font-size: 0.75rem;
            color: var(--text-muted);
            transition: transform 0.3s ease;
        }
        .finding-card.accordion.open .finding-header .icon {
            transform: rotate(180deg);
        }

        .finding-content {
            display: none;
            padding: 1.25rem;
            background-color: var(--bg-body);
            border-top: 1px solid var(--border-color);
        }
        .finding-card.accordion.open .finding-content {
            display: block;
            animation: slideDown 0.2s ease-out;
        }

        .finding-desc {
            margin: 0 0 1rem 0;
            color: var(--text-main);
        }
        .finding-body {
            font-size: 0.95rem;
            color: var(--text-muted);
            line-height: 1.6;
        }
        .finding-meta {
            font-size: 0.9em;
            color: var(--text-muted);
            margin-top: 1rem;
            padding-top: 0.5rem;
            border-top: 1px solid var(--border-color);
        }
        .solution {
            margin-top: 1rem;
            background: rgba(16, 185, 129, 0.1); /* Green tint transparent */
            padding: 1rem;
            border-radius: 6px;
            border: 1px solid rgba(16, 185, 129, 0.2);
            color: #34d399; /* Light green text */
        }
        .solution strong {
            display: block;
            margin-bottom: 0.25rem;
            color: #6ee7b7;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-5px);
            }
            to {
