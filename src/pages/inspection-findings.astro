    <script>
        document.addEventListener("astro:page-load", () => {
            initPage();
        });

        // Fallback
        if (document.readyState !== "loading") {
            initPage();
        }

        function initPage() {
            // 1. Accordion Logic
            const catAccs = document.querySelectorAll(".category-accordion");
            catAccs.forEach((acc) => {
                // Avoid duplicate listeners
                if (acc.dataset.hasListener) return;
                acc.dataset.hasListener = "true";

                const header = acc.querySelector(".category-header");
                header.addEventListener("click", (e) => {
                    acc.classList.toggle("open");
                });
            });

            const findAccs = document.querySelectorAll(
                ".finding-card.accordion",
            );
            findAccs.forEach((acc) => {
                if (acc.dataset.hasListener) return;
                acc.dataset.hasListener = "true";

                const header = acc.querySelector(".finding-header");
                header.addEventListener("click", (e) => {
                    acc.classList.toggle("open");
                    e.stopPropagation();
                });
            });

            // 2. Search & Tag Logic
            const searchInput = document.getElementById("searchInput");
            const tagBtns = document.querySelectorAll(".tag-btn");
            const noResults = document.getElementById("noResults");

            let currentTag = "all";
            let currentSearch = "";

            function applyFilters() {
                let hasOverallResults = false;
                const isHighlightMode = currentTag === "highlight"; // Special logic for highlight? Or just string matching?
                // For 'highlight', we might match a specific flag if we had one.
                // For now, let's treat it as a keyword search for "Ï§ëÏöî" or "ÏúÑÎ∞ò"?
                // Or maybe just filter by specific IDs?
                // Simpler: Just search categories or specific keywords.
                // Let's assume 'highlight' searches for terms like "Í≥ºÌÉúÎ£å", "ÌñâÏ†ïÏ≤òÎ∂Ñ", "Ï§ëÏöî" or we just treat it as a broad search.
                // Actually, let's treat 'highlight' as searching for "ÏúÑÎ∞ò" or "ÏßÄÏ†Å".
                // But better: Let's assume the user wants to filter by the value.

                catAccs.forEach((cat) => {
                    const findings = cat.querySelectorAll(".finding-card");
                    let hasVisibleChildren = false;

                    findings.forEach((finding) => {
                        const text = finding.dataset.search || "";

                        // Tag Match
                        let tagMatch = true;
                        if (currentTag !== "all") {
                            if (currentTag === "highlight") {
                                // Smart logic: "Highlight" matches warnings/violations?
                                // Let's match text "ÏúÑÎ∞ò" or "Î∂ÄÏ†ÅÌï©"
                                tagMatch =
                                    text.includes("ÏúÑÎ∞ò") ||
                                    text.includes("Î∂ÄÏ†ÅÌï©") ||
                                    text.includes("Í≥ºÌÉúÎ£å");
                            } else {
                                tagMatch = text.includes(currentTag);
                            }
                        }

                        // Search Match
                        const searchMatch = text.includes(currentSearch);

                        if (tagMatch && searchMatch) {
                            finding.style.display = "";
                            hasVisibleChildren = true;
                            // Auto-open if filtering is active (either tag or search)
                            if (currentTag !== "all" || currentSearch !== "") {
                                finding.classList.add("open");
                            } else {
                                finding.classList.remove("open");
                            }
                        } else {
                            finding.style.display = "none";
                            finding.classList.remove("open");
                        }
                    });

                    if (hasVisibleChildren) {
                        cat.style.display = "";
                        if (currentTag !== "all" || currentSearch !== "") {
                            cat.classList.add("open");
                        } else {
                            cat.classList.remove("open");
                        }
                        hasOverallResults = true;
                    } else {
                        cat.style.display = "none";
                        cat.classList.remove("open");
                    }
                });

                if (noResults) {
                    noResults.style.display = hasOverallResults
                        ? "none"
                        : "block";
                }
            }

            // Event Listeners
            if (searchInput) {
                searchInput.addEventListener("input", (e) => {
                    currentSearch = e.target.value.toLowerCase().trim();
                    applyFilters();
                });
            }

            tagBtns.forEach((btn) => {
                btn.addEventListener("click", () => {
                    // UI Update
                    tagBtns.forEach((b) => b.classList.remove("active"));
                    btn.classList.add("active");

                    // Logic Update
                    currentTag = btn.dataset.value;
                    applyFilters();
                });
            });
        }
    </script>
