                                                <FindingContent />
                                            </div>

                                            {item.data.violationClause && (
                                                <div class="finding-meta">
                                                    Í¥ÄÎ†® Î≤ïÎ†π:{" "}
                                                    {item.data.violationClause}
                                                </div>
                                            )}

                                            {item.data.solution && (
                                                <div class="solution">
                                                    <strong>
                                                        üí° Ï°∞Ïπò Î∞©Ïïà
                                                    </strong>
                                                    {item.data.solution}
                                                </div>
                                            )}
                                        </div>
                                    </div>
                                );
                            })}
                        </div>
                    </div>
